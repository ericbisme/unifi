{
  "system": {
    "name-server": [
      "192.168.10.129",
      "1.1.1.1",
      "1.0.0.1"
    ]
  },
  "service": {
    "dns": {
      "forwarding": {
        "options": [
          "strict-order",
          "address=/ericbisme.net/192.168.10.128 # K8s Ingress",
          "address=/pi.hole/192.168.10.128 # pi-hole address",
          "server=/thepit.ericbisme.net/1.1.1.1"
        ]
      }
    }
  },
  "load-balance": {
    "group": {
      "wan_failover": {
        "interface": {
          "eth2": {
            "route-test": {
              "type": {
                "ping": {
                  "target": "8.8.8.8"
                }
              }
            }
          },
          "eth3": {
            "route-test": {
              "type": {
                "ping": {
                  "target": "8.8.8.8"
                }
              }
            }
          }
        }
      }
    }
  }
}
